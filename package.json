{
  "name": "ok",
  "description": "A module that sticks togetheer some modules i like to use for front end apps.",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/ok.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/ok/issues"
  },
  "homepage": "https://github.com/nichoth/ok#readme",
  "engines": {
    "npm": "^5.0.0",
    "node": "^8.0.0"
  },
  "aliasify": {
    "aliases": {
      "react": "preact-compat",
      "react-dom": "preact-compat",
      "create-react-class": "preact-compat/lib/create-react-class"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run serve\" \"npm run sass-watch\"",
    "serve": "env $(cat .env | xargs) budo src/index.js:bundle.js --pushstate --dir=public --live -- -t babelify -g aliasify -t [ envify --NODE_ENV development ] -dv",
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify -p bundle-collapser/plugin src/index.js -t babelify -t [ envify --NODE_ENV production ] -g aliasify -g unassertify | uglifyjs -mc > public/bundle.js",
    "prepush": "./test/githook/prepush.sh",
    "preversion": "npm run lint && npm test",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "lint": "eslint . --config .eslintrc",
    "test": "tape test/{**/*,*}.js",
    "test-browser": "browserify test-browser/index.js | htmlify test-browser/index.html | tape-run --input html"
  },
  "dependencies": {
    "@nichoth/catch-routes": "^1.0.3",
    "@nichoth/events": "^1.1.2",
    "@nichoth/preact-connect": "^1.1.0",
    "observ": "^0.2.0",
    "observ-struct": "^6.0.0",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "ruta3": "^2.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "aliasify": "^2.1.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "budo": "^11.5.0",
    "bundle-collapser": "^1.3.0",
    "concurrently": "^3.5.1",
    "envify": "^4.1.0",
    "eslint": "^4.19.1",
    "eslint-config-minlint": "^2.0.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^0.14.3",
    "inline-htmlify": "^2.0.1",
    "node-sass": "^4.11.0",
    "tape": "^4.9.0",
    "tape-run": "^4.0.0",
    "uglify-js": "^3.3.25",
    "unassertify": "^2.1.1"
  }
}
